@page
@model LoginModel

@{
    ViewData["Title"] = "Prijava";
}

<div class="d-flex justify-content-center align-items-center py-5">

    <div class="card shadow-sm p-4" style="width: 360px;">
        <h3 class="text-center text-primary mb-4">Prijava</h3>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Unesite email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label">Lozinka</label>
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Unesite lozinku" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label class="form-check-label" asp-for="Input.RememberMe">
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>

            <button type="submit" class="btn btn-primary w-100">Prijavi se</button>
        </form>

        <div class="text-center mt-4">
            <p class="text-muted mb-0">Pristup je dozvoljen samo registrovanim korisnicima.</p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

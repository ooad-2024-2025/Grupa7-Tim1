@model List<eDnevnik.Models.Izostanak>

@{
    ViewData["Title"] = "Izostanci djeteta";
    var ucenik = ViewBag.Ucenik as eDnevnik.Models.Korisnik;
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="fas fa-user-times"></i> Izostanci – @ucenik.FullName</h2>
            <p class="text-muted">Pregled svih izostanaka sa casova</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="OcjeneDjeteta" asp-route-dijeteId="@ucenik.Id" class="btn btn-outline-primary me-2">
                <i class="fas fa-star"></i> Ocjene
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Nazad na dashboard
            </a>
        </div>
    </div>

    <!-- Statistike izostanaka -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-danger">
                <div class="card-body text-center">
                    <h4 class="text-danger">@Model.Count</h4>
                    <p class="card-text">Ukupno izostanaka</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <h4 class="text-warning">@Model.Count(i => i.status == eDnevnik.Data.@enum.StatusIzostanka.Opravdan)</h4>
                    <p class="card-text">Opravdanih</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-danger">
                <div class="card-body text-center">
                    <h4 class="text-danger">@Model.Count(i => i.status == eDnevnik.Data.@enum.StatusIzostanka.Neopravdan)</h4>
                    <p class="card-text">Neopravdanih</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-info">
                <div class="card-body text-center">
                    <h4 class="text-info">
                        @if (Model.Any())
                        {
                            @Math.Round(Model.Count(i => i.status == eDnevnik.Data.@enum.StatusIzostanka.Opravdan) * 100.0 / Model.Count, 1)
                            <text>%</text>
                        }
                        else
                        {
                            <text>0%</text>
                        }
                    </h4>
                    <p class="card-text">Opravdanih (%)</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Lista izostanaka -->
    @if (Model.Any())
    {
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">
                    <i class="fas fa-list"></i> Lista izostanaka (@Model.Count)
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Datum i vrijeme</th>
                                <th>Predmet</th>
                                <th>Status</th>
                                <th>Komentar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var izostanak in Model)
                            {
                                <tr class="@(izostanak.status == eDnevnik.Data.@enum.StatusIzostanka.Neopravdan ? "table-danger" : "table-warning")">
                                    <td>
                                        <strong>@izostanak.Cas.Termin.ToString("dd.MM.yyyy")</strong>
                                        <br>
                                        <small class="text-muted">@izostanak.Cas.Termin.ToString("HH:mm")</small>
                                    </td>
                                    <td>
                                        <i class="fas fa-book text-primary me-1"></i>
                                        @izostanak.Cas.Predmet?.Naziv
                                    </td>
                                    <td>
                                        @if (izostanak.status == eDnevnik.Data.@enum.StatusIzostanka.Opravdan)
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-check"></i> Opravdan
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times"></i> Neopravdan
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(izostanak.Komentar))
                                        {
                                            <small class="text-muted">@izostanak.Komentar</small>
                                        }
                                        else
                                        {
                                            <small class="text-muted fst-italic">Bez komentara</small>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Statistike po mjesecima -->
        <div class="card mt-4">
            <div class="card-header bg-info text-white">
                <h6 class="mb-0">
                    <i class="fas fa-chart-bar"></i> Statistike po mjesecima
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    @{
                        var mjesecniIzostanci = Model
                            .GroupBy(i => new { i.Cas.Termin.Year, i.Cas.Termin.Month })
                            .Select(g => new {
                                Mjesec = new DateTime(g.Key.Year, g.Key.Month, 1),
                                Ukupno = g.Count(),
                                Opravdanih = g.Count(i => i.status == eDnevnik.Data.@enum.StatusIzostanka.Opravdan),
                                Neopravdanih = g.Count(i => i.status == eDnevnik.Data.@enum.StatusIzostanka.Neopravdan)
                            })
                            .OrderByDescending(x => x.Mjesec)
                            .Take(6);
                    }

                    @foreach (var mjesec in mjesecniIzostanci)
                    {
                        <div class="col-md-2 mb-3">
                            <div class="card border-light">
                                <div class="card-body text-center p-2">
                                    <h6 class="text-primary mb-1">@mjesec.Mjesec.ToString("MMM yyyy")</h6>
                                    <h4 class="mb-1">@mjesec.Ukupno</h4>
                                    <small class="text-muted">
                                        <span class="text-warning">@mjesec.Opravdanih</span> / 
                                        <span class="text-danger">@mjesec.Neopravdanih</span>
                                    </small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center">
                <i class="fas fa-user-check fa-4x text-success mb-3"></i>
                <h4 class="text-success">Odličo! Nema izostanaka</h4>
                <p class="text-muted">@ucenik.FullName nije imao/la nijedan izostanak.</p>
                <a asp-action="Index" class="btn btn-success">
                    <i class="fas fa-arrow-left"></i> Nazad na dashboard
                </a>
            </div>
        </div>
    }
</div>
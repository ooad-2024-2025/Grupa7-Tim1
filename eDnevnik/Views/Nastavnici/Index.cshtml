@model List<eDnevnik.Models.Korisnik>
@{
    ViewData["Title"] = "Pregled nastavnika";
}

@if (TempData["Greska"] != null)
{
    <div class="alert alert-danger text-center">
        @TempData["Greska"]
    </div>
}


<h2 class="text-center mb-4">Pregled nastavnika</h2>

<div style="max-height: 300px; overflow-y: auto;">
    <table class="table table-striped table-bordered">
        <thead class="table-primary">
            <tr>
                <th>Ime</th>
                <th>Prezime</th>
                <th>Email</th>
                <th>Telefon</th>
                <th>Adresa</th>
                <th>Akcija</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var nastavnik in Model)
            {
                <tr>
                    <td>@nastavnik.Ime</td>
                    <td>@nastavnik.Prezime</td>
                    <td>@nastavnik.Email</td>
                    <td>@nastavnik.Telefon</td>
                    <td>@nastavnik.Adresa</td>
                    <td>
                        <div class="d-flex gap-2">
                            <a class="btn btn-warning w-100" style="min-width:80px;" asp-action="Edit" asp-route-id="@nastavnik.Id">Uredi</a>
                            <form asp-action="Obrisi" asp-route-id="@nastavnik.Id" method="post"
                                  class="w-100" style="min-width:80px;" onsubmit="return confirm('Da li ste sigurni da želite obrisati nastavnika?');">
                                <button type="submit" class="btn btn-danger w-100">Obriši</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center mt-3">
    <a class="btn btn-primary btn-lg" asp-action="Dodaj">+ Dodaj nastavnika</a>
</div>

@model eDnevnik.Models.Razred
@{
    ViewData["Title"] = "Dodaj razred";
}

<h2 class="text-center">Dodaj razred</h2>

<form asp-action="Dodaj" method="post" class="w-50 mx-auto mt-4">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="form-group mb-3">
        <label asp-for="Naziv" class="form-label">Naziv (npr. IV-b)</label>
        <input asp-for="Naziv" class="form-control" />
        <span asp-validation-for="Naziv" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="NastavnikId" class="form-label">Razrednik</label>
        <select asp-for="NastavnikId" asp-items="ViewBag.Nastavnici" class="form-select">
            <option value="">-- Odaberite nastavnika --</option>
        </select>
        <span asp-validation-for="NastavnikId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100">Dodaj</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

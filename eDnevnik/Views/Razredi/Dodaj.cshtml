@model eDnevnik.Models.Razred
@{
    ViewData["Title"] = "Dodaj razred";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark text-center">
                    <h3 class="mb-0">
                        <i class="fas fa-school"></i> Dodaj novi razred
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Dodaj" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Naziv" class="form-label">
                                <i class="fas fa-tag text-warning"></i> Naziv razreda *
                            </label>
                            <input asp-for="Naziv" class="form-control" placeholder="npr. IV-b, V-a, VI-c" maxlength="10" />
                            <div class="form-text">
                                <i class="fas fa-info-circle"></i> Format: Rimski broj + crtica + slovo (npr. IV-b)
                            </div>
                            <span asp-validation-for="Naziv" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="NastavnikId" class="form-label">
                                <i class="fas fa-user-tie text-warning"></i> Razrednik *
                            </label>
                            <select asp-for="NastavnikId" asp-items="ViewBag.Nastavnici" class="form-select">
                                <option value="">-- Odaberite nastavnika --</option>
                            </select>
                            <div class="form-text">
                                <i class="fas fa-info-circle"></i> Nastavnik koji će biti razrednik ovog razreda
                            </div>
                            <span asp-validation-for="NastavnikId" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-users"></i>
                            <strong>Napomena:</strong> Nakon dodavanja razreda, možete mu dodijeliti učenike i predmete.
                        </div>

                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Važno:</strong> Naziv razreda mora biti jedinstven u sistemu.
                        </div>

                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-warning flex-fill">
                                <i class="fas fa-save"></i> Dodaj razred
                            </button>
                            <a href="/Razredi" class="btn btn-secondary flex-fill">
                                <i class="fas fa-times"></i> Odustani
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }

    .form-control:focus, .form-select:focus {
        border-color: #ffc107;
        box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
    }

    .form-text {
        font-size: 0.875rem;
        color: #6c757d;
    }

    .btn {
        border-radius: 6px;
        padding: 0.75rem 1rem;
    }

    .btn-warning {
        color: #000;
    }
</style>
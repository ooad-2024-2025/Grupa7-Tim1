@model eDnevnik.Models.Predmet
@{
    ViewData["Title"] = "Dodaj predmet";
    var nastavnici = ViewBag.Nastavnici as List<eDnevnik.Models.Korisnik>;
}

<h2 class="text-center mb-4">Dodaj novi predmet</h2>

<form asp-action="Dodaj" method="post" class="w-50 mx-auto">
    <div class="form-group mb-3">
        <label asp-for="Naziv" class="form-label">Naziv predmeta</label>
        <input asp-for="Naziv" class="form-control" />
        <span asp-validation-for="Naziv" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Opis" class="form-label">Opis</label>
        <textarea asp-for="Opis" class="form-control"></textarea>
    </div>

    <div class="form-group mb-4">
        <label class="form-label">Nastavnik</label>
        <select asp-for="NastavnikId" class="form-select">
            <option value="">-- Odaberi nastavnika --</option>
            @foreach (var n in nastavnici)
            {
                <option value="@n.Id">@n.Ime @n.Prezime (@n.Email)</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary w-100">Dodaj</button>
</form>

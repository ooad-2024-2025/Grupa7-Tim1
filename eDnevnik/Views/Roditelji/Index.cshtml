@model List<eDnevnik.Models.Korisnik>
    @{
    ViewData["Title"] = "Pregled roditelja";
    }

    @if (TempData["Greska"] != null)
{
    <div class="alert alert-danger text-center">
        @TempData["Greska"]
    </div>
}

    <h2 class="text-center mb-4">Pregled roditelja</h2>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-primary">
                <tr>
                    <th>Ime</th>
                    <th>Prezime</th>
                    <th>Email</th>
                    <th>Telefon</th>
                    <th>Adresa</th>
                    <th>Akcija</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Ime</td>
                    <td>@r.Prezime</td>
                    <td>@r.Email</td>
                    <td>@r.Telefon</td>
                    <td>@r.Adresa</td>
                    <td>
                        <div class="d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@r.Id" class="btn btn-warning w-100" style="min-width:80px;">Uredi</a>
                            <form asp-action="Obrisi" asp-route-id="@r.Id" method="post" onsubmit="return confirm('Da li ste sigurni da želite obrisati roditelja?');">
                                <button type="submit" class="btn btn-danger w-100" style="min-width:80px;">Obriši</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    <div class="text-center mt-3">
        <a class="btn btn-primary btn-lg" asp-action="Dodaj">+ Dodaj roditelja</a>
    </div>

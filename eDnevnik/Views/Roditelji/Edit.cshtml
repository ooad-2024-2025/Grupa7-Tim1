@model eDnevnik.Models.Korisnik
@{
    ViewData["Title"] = "Uredi roditelja";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-info text-white text-center">
                    <h3 class="mb-0">
                        <i class="fas fa-edit"></i> Uredi podatke roditelja
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Ime" class="form-label">
                                    <i class="fas fa-user text-info"></i> Ime *
                                </label>
                                <input asp-for="Ime" class="form-control" placeholder="Unesite ime" maxlength="50" />
                                <span asp-validation-for="Ime" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Prezime" class="form-label">
                                    <i class="fas fa-user text-info"></i> Prezime *
                                </label>
                                <input asp-for="Prezime" class="form-control" placeholder="Unesite prezime" maxlength="50" />
                                <span asp-validation-for="Prezime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope text-info"></i> Email adresa *
                            </label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="ime.prezime@email.com" maxlength="100" />
                            <div class="form-text">
                                <i class="fas fa-info-circle"></i> Email će biti korišten za pristup sistemu i obavještenja
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Telefon" class="form-label">
                                <i class="fas fa-phone text-info"></i> Broj telefona
                            </label>
                            <input asp-for="Telefon" type="tel" class="form-control" placeholder="061 123 456 ili +387 61 123 456" maxlength="20" />
                            <div class="form-text">
                                <i class="fas fa-info-circle"></i> Kontakt telefon za hitne slučajeve
                            </div>
                            <span asp-validation-for="Telefon" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Adresa" class="form-label">
                                <i class="fas fa-home text-info"></i> Adresa stanovanja
                            </label>
                            <textarea asp-for="Adresa" class="form-control" rows="3" placeholder="Ulica i broj, grad, poštanski broj" maxlength="200"></textarea>
                            <div class="form-text">
                                <i class="fas fa-info-circle"></i> Adresa stanovanja porodice
                            </div>
                            <span asp-validation-for="Adresa" class="text-danger"></span>
                        </div>

                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Napomena:</strong> Mijenjanje email adrese može uticati na pristup sistemu.
                        </div>

                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-info flex-fill">
                                <i class="fas fa-save"></i> Spasi izmjene
                            </button>
                            <a href="/Roditelji" class="btn btn-secondary flex-fill">
                                <i class="fas fa-arrow-left"></i> Nazad
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }

    .form-control:focus, .form-select:focus {
        border-color: #0dcaf0;
        box-shadow: 0 0 0 0.2rem rgba(13, 202, 240, 0.25);
    }

    .form-text {
        font-size: 0.875rem;
        color: #6c757d;
    }

    .btn {
        border-radius: 6px;
        padding: 0.75rem 1rem;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
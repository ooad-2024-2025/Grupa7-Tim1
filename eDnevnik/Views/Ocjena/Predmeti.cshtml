@model List<eDnevnik.Models.Predmet>
@{
    ViewData["Title"] = "Odaberi predmet";
    var razredId = ViewBag.RazredId;
}

<h2 class="text-center mb-4">Odaberi predmet</h2>

@if (!Model.Any())
{
    <p class="text-center">Nema dostupnih predmeta.</p>
}
else
{
    <div class="list-group w-75 mx-auto">
        @foreach (var p in Model)
        {
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <strong>@p.Naziv</strong>
                <div class="d-flex gap-2">
                    <a class="btn btn-primary btn-sm" asp-action="Ucenici" asp-route-razredId="@razredId" asp-route-predmetId="@p.Id">Unos ocjena</a>
                    <a class="btn btn-outline-primary btn-sm" asp-action="Rezime" asp-route-razredId="@razredId" asp-route-predmetId="@p.Id">Pregled ocjena</a>
                </div>
            </div>
        }
    </div>

}

@model eDnevnik.Models.Korisnik

@{
    ViewData["Title"] = "Dodaj učenika";
}

<h2 class="text-center mb-4">Dodaj učenika</h2>

<form asp-action="Dodaj" method="post" class="w-50 mx-auto">

    @* Prikaz grešaka na vrhu forme *@
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

    <div class="mb-3">
        <label asp-for="Ime" class="form-label"></label>
        <input asp-for="Ime" class="form-control" />
        <span asp-validation-for="Ime" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Prezime" class="form-label"></label>
        <input asp-for="Prezime" class="form-control" />
        <span asp-validation-for="Prezime" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Adresa" class="form-label"></label>
        <input asp-for="Adresa" class="form-control" />
        <span asp-validation-for="Adresa" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Telefon" class="form-label"></label>
        <input asp-for="Telefon" class="form-control" />
        <span asp-validation-for="Telefon" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="RazredId" class="form-label">Razred</label>
        <select asp-for="RazredId" class="form-select" asp-items="ViewBag.Razredi">
            <option value="">-- Odaberi razred --</option>
        </select>
        <span asp-validation-for="RazredId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="RoditeljId" class="form-label">Roditelj</label>
        <select asp-for="RoditeljId" class="form-select" asp-items="ViewBag.Roditelji">
            <option value="">-- Odaberi roditelja --</option>
        </select>
        <span asp-validation-for="RoditeljId" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary w-100">Dodaj</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

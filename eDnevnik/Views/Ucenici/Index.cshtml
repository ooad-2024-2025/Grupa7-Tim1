@model List<eDnevnik.Models.Korisnik>

@{
    ViewData["Title"] = "Pregled učenika";
}

<h2 class="text-center mb-4">Pregled učenika</h2>

<div class="table-responsive" style="max-height: 600px; overflow-y: auto;">
    <table class="table table-bordered table-striped mb-0">
        <thead class="table-primary text-center sticky-top">
            <tr>
                <th>Ime</th>
                <th>Prezime</th>
                <th>Email</th>
                <th>Telefon</th>
                <th>Adresa</th>
                <th>Razred</th>
                <th>Akcija</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var ucenik in Model)
            {
                <tr>
                    <td>@ucenik.Ime</td>
                    <td>@ucenik.Prezime</td>
                    <td>@ucenik.Email</td>
                    <td>@ucenik.Telefon</td>
                    <td>@ucenik.Adresa</td>
                    <td>@(ucenik.Razred != null ? ucenik.Razred.Naziv : "Nema razred")</td>
                        <td>
        <div class="d-flex gap-2">
            <a class="btn btn-warning w-100" style="min-width:80px;" asp-action="Edit" asp-route-id="@ucenik.Id">Uredi</a>

            <form asp-action="Obrisi" asp-route-id="@ucenik.Id" method="post"
                  class="w-100" style="min-width:80px;" onsubmit="return confirm('Da li ste sigurni da želite obrisati učenika?');">
                <button type="submit" class="btn btn-danger w-100">Obriši</button>
            </form>

                        <form asp-controller="Report" asp-action="Send" method="post" class="w-100">
        <input type="hidden" name="ucenikId" value="@ucenik.Id" />
        <button type="submit" class="btn btn-success w-100">Izvještaj</button>
        </form>
        </div>
    </td>


                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center mt-4">
    <a class="btn btn-primary btn-lg" asp-controller="Ucenici" asp-action="Dodaj">+ Dodaj učenika</a>
</div>

@model eDnevnik.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="mb-4">Dobrodošli, Administrator!</h2>

<div class="row">
    <div class="col-md-4">
        <div class="card bg-primary text-white mb-3">
            <div class="card-body">
                <h5 class="card-title">Učenici</h5>
                <p class="card-text fs-4">@Model.BrojUcenika</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-success text-white mb-3">
            <div class="card-body">
                <h5 class="card-title">Nastavnici</h5>
                <p class="card-text fs-4">@Model.BrojNastavnika</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-info text-white mb-3">
            <div class="card-body">
                <h5 class="card-title">Roditelji</h5>
                <p class="card-text fs-4">@Model.BrojRoditelja</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card bg-warning text-dark mb-3">
            <div class="card-body">
                <h5 class="card-title">Razredi</h5>
                <p class="card-text fs-4">@Model.BrojRazreda</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-dark text-white mb-3">
            <div class="card-body">
                <h5 class="card-title">Predmeti</h5>
                <p class="card-text fs-4">@Model.BrojPredmeta</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <!-- Prazan slot ako hoćeš ubaciti još neki entitet -->
        <div class="card bg-light text-muted mb-3">
            <div class="card-body text-center">
                <h5 class="card-title">---</h5>
                <p class="card-text fs-4">---</p>
            </div>
        </div>
    </div>
</div>

<hr />

<h4 class="mb-3">Pregled svih korisnika</h4>

<div class="table-responsive" style="max-height: 300px; overflow-y: auto;">
    <table class="table table-striped table-bordered mb-0">
        <thead class="table-dark sticky-top">
            <tr>
                <th>Ime</th>
                <th>Prezime</th>
                <th>Email</th>
                <th>Uloga/e</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var korisnik in Model.Korisnici)
            {
                <tr>
                    <td>@korisnik.Ime</td>
                    <td>@korisnik.Prezime</td>
                    <td>@korisnik.Email</td>
                    <td>@korisnik.Uloge</td>
                </tr>
            }
        </tbody>
    </table>
</div>


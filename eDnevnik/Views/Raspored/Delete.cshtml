@model eDnevnik.Models.Cas

@{
    ViewData["Title"] = "Obriši čas";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4><i class="fas fa-trash"></i> Potvrdi brisanje</h4>
                </div>
                <div class="card-body">

                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Pažnja!</strong> Da li ste sigurni da želite obrisati ovaj čas?
                    </div>

                    <!-- Detalji časa -->
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title text-danger">Čas koji se briše:</h5>

                            <div class="row mb-2">
                                <div class="col-sm-3"><strong>Dan:</strong></div>
                                <div class="col-sm-9">@Model.DanNaziv</div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-sm-3"><strong>Termin:</strong></div>
                                <div class="col-sm-9">
                                    @Model.FixniTermin?.Naziv (@Model.FixniTermin?.FormatiraniTermin)
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-sm-3"><strong>Razred:</strong></div>
                                <div class="col-sm-9">@Model.Razred?.Naziv</div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-sm-3"><strong>Predmet:</strong></div>
                                <div class="col-sm-9">@Model.Predmet?.Naziv</div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-sm-3"><strong>Nastavnik:</strong></div>
                                <div class="col-sm-9">@Model.Nastavnik?.FullName</div>
                            </div>
                        </div>
                    </div>

                    <!-- Forma za brisanje -->
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Upravljanje" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Odustani
                            </a>

                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Obriši čas
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@model eDnevnik.Models.Cas

@{
    ViewData["Title"] = "Brisanje časa";
}

<h3 class="mb-3 text-danger">Da li ste sigurni da želite obrisati ovaj čas?</h3>

<div>
    <strong>Razred:</strong> @Model.Razred?.Naziv<br />
    <strong>Predmet:</strong> @Model.Predmet?.Naziv<br />
    <strong>Nastavnik:</strong> @Model.Nastavnik?.FullName<br />
    <strong>Termin:</strong> @Model.Termin.ToString("dddd HH:mm")
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-3">Obriši</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Nazad</a>
</form>